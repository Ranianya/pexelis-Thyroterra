generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id            Int    @id @default(autoincrement())
  username      String
  heartsCount   Int    @default(2)
  email         String @unique
  password      String // <-- Add this
  currentLandId Int?
  currentSpotId Int?

  currentLand Land? @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot Spot? @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]

  createdAt DateTime @default(now())
}

model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)

  spots Spot[]

  users User[] @relation("CurrentLand")
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int // 1-12
  isUnlocked Boolean @default(false)

  land             Land   @relation(fields: [landId], references: [id])
  currentSpotUsers User[] @relation("CurrentSpot")
}

model UserProgress {
  id        Int            @id @default(autoincrement())
  userId    Int
  user      User           @relation(fields: [userId], references: [id])
  status    ProgressStatus
  createdAt DateTime       @default(now())
}

model MonthlyProgressDisplay {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  month     Int
  createdAt DateTime @default(now())
}

