generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
} 

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id             Int      @id @default(autoincrement())
  username       String
  heartsCount    Int      @default(2)
  email          String   @unique
  password       String
  currentLandId  Int?
  currentSpotId  Int?

  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]

  // All habits the user has checked or added
  habits         UserHabit[]

  // Private habits created by the user
  privateHabits  Habit[] @relation("UserPrivateHabits")

  createdAt DateTime @default(now())
}

model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)

  spots Spot[]
  users User[] @relation("CurrentLand")
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int     // 1-12
  isUnlocked Boolean @default(false)

  land Land @relation(fields: [landId], references: [id])
  currentSpotUsers User[] @relation("CurrentSpot")

  userProgress UserProgress[]
  days         Day[]

  monthlyProgressDisplays MonthlyProgressDisplay[]
}

model Day {
  id        Int    @id @default(autoincrement())
  spotId    Int
  dayNumber Int    // 1-31

  spot      Spot @relation(fields: [spotId], references: [id])
  progress  UserProgress[]

  @@unique([spotId, dayNumber])
}

model UserProgress {
  id      Int            @id @default(autoincrement())
  userId  Int
  spotId  Int
  habitId Int
  dayId   Int
  status  ProgressStatus @default(missed)

  user  User  @relation(fields: [userId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])
  day   Day   @relation(fields: [dayId], references: [id])

  @@unique([userId, habitId, dayId])
}

model MonthlyProgressDisplay {
  id                 Int      @id @default(autoincrement())
  userId             Int
  spotId             Int
  progressPercentage Int      @default(0)
  user               User     @relation(fields: [userId], references: [id])
  spot               Spot     @relation(fields: [spotId], references: [id])

  @@unique([userId, spotId]) // ðŸ‘ˆ ADD THIS LINE
}
//////////////////////////////////////////////////
// HABITS
//////////////////////////////////////////////////

model HabitCategory {
  id           Int     @id @default(autoincrement())
  categoryName String

  habits Habit[]
}

model Habit {
  id         Int    @id @default(autoincrement())
  categoryId Int
  taskName   String
  userId     Int?   // null = global, number = private

  category HabitCategory @relation(fields: [categoryId], references: [id])

  // Private habits relation to user
  user User? @relation("UserPrivateHabits", fields: [userId], references: [id], map: "FK_Habit_User")

  progress   UserProgress[]
  userHabits UserHabit[]
}

model UserHabit {
  id      Int @id @default(autoincrement())

  userId  Int
  habitId Int

  isChecked Boolean @default(false)

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId])
}

//////////////////////////////////////////////////
// FAQ
//////////////////////////////////////////////////

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}