generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id             Int      @id @default(autoincrement())
  username       String
  heartsCount    Int      @default(2)
  email          String   @unique
  password       String   // <-- Add this
  currentLandId  Int?
  currentSpotId  Int?

  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]

  createdAt DateTime @default(now())
}


model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)

  spots Spot[]

  users User[] @relation("CurrentLand")
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int    // 1-12
  isUnlocked Boolean @default(false)

  land Land @relation(fields: [landId], references: [id])
  currentSpotUsers User[] @relation("CurrentSpot")
}

model UserProgress {
  id        Int            @id @default(autoincrement())
  userId    Int
  spotId    Int
  habitId   Int
  dayNumber Int
  status    ProgressStatus @default(completed)
  
  user  User  @relation(fields: [userId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId, spotId, dayNumber])
}

model MonthlyProgressDisplay {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  month     Int
  createdAt DateTime @default(now())
}

CREATE TABLE habit_categories (
    id INT PRIMARY KEY AUTO_INCREMENT,
    category_name VARCHAR(50) -- 'Thyroid Treatment' or 'Wellness Forest'
);

CREATE TABLE habit (
    id INT PRIMARY KEY AUTO_INCREMENT,
    category_id INT,
    task_name VARCHAR(255), -- e.g., 'Take Levothyroxine'
    FOREIGN KEY (category_id) REFERENCES habit_categories(id)
);
CREATE TABLE faq (
    id INT PRIMARY KEY AUTO_INCREMENT,
    question TEXT NOT NULL, -- e.g., 'Which gland is affected?'
    answer TEXT NOT NULL
);

