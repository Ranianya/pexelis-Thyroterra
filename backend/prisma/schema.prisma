generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id             Int      @id @default(autoincrement())
  username       String
  heartsCount    Int      @default(2)
  email          String   @unique
  password       String
  currentLandId  Int?
  currentSpotId  Int?

  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]
  habits         UserHabit[]
  privateHabits  Habit[] @relation("UserPrivateHabits")

  unlockedLands  UserLand[]
  unlockedSpots  UserSpot[]

  userDays       UserDay[]   // ✅ correct relation

  createdAt DateTime @default(now())
}

model Land {
  id          Int     @id @default(autoincrement())
  name        String
  spots       Spot[]
  users       User[]  @relation("CurrentLand")
  userUnlocks UserLand[]
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int

  land       Land @relation(fields: [landId], references: [id])

  userProgress UserProgress[]
  days         Day[]
  monthlyProgressDisplays MonthlyProgressDisplay[]
  currentSpotUsers User[] @relation("CurrentSpot")
  userUnlocks UserSpot[]
}

model Day {
  id        Int    @id @default(autoincrement())
  spotId    Int
  dayNumber Int

  spot      Spot @relation(fields: [spotId], references: [id])
  progress  UserProgress[]

  userDays  UserDay[]   // ✅ opposite relation added here

  @@unique([spotId, dayNumber])
}

//////////////////////////////////////////////////
// USER DAY (Unlock & Completion Logic)
//////////////////////////////////////////////////

model UserDay {
  id        Int @id @default(autoincrement())
  userId    Int
  dayId     Int
  unlocked  Boolean @default(false)
  completed Boolean @default(false)

  user User @relation(fields: [userId], references: [id])
  day  Day  @relation(fields: [dayId], references: [id])

  @@unique([userId, dayId])
}

//////////////////////////////////////////////////
// USER PROGRESS
//////////////////////////////////////////////////

model UserProgress {
  id      Int            @id @default(autoincrement())
  userId  Int
  spotId  Int
  habitId Int
  dayId   Int
  status  ProgressStatus @default(missed)

  user  User  @relation(fields: [userId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])
  day   Day   @relation(fields: [dayId], references: [id])

  @@unique([userId, habitId, dayId])
}

model MonthlyProgressDisplay {
  id                 Int @id @default(autoincrement())
  userId             Int
  spotId             Int
  progressPercentage Int @default(0)

  user User @relation(fields: [userId], references: [id])
  spot Spot @relation(fields: [spotId], references: [id])

  @@unique([userId, spotId])
}

//////////////////////////////////////////////////
// HABITS
//////////////////////////////////////////////////

model HabitCategory {
  id           Int @id @default(autoincrement())
  categoryName String
  habits       Habit[]
}

model Habit {
  id         Int @id @default(autoincrement())
  categoryId Int
  taskName   String
  userId     Int?

  category HabitCategory @relation(fields: [categoryId], references: [id])
  user     User? @relation("UserPrivateHabits", fields: [userId], references: [id])

  progress   UserProgress[]
  userHabits UserHabit[]
}

model UserHabit {
  id        Int @id @default(autoincrement())
  userId    Int
  habitId   Int
  isChecked Boolean @default(false)

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId])
}

//////////////////////////////////////////////////
// USER UNLOCKS
//////////////////////////////////////////////////

model UserLand {
  id       Int @id @default(autoincrement())
  userId   Int
  landId   Int
  unlocked Boolean @default(false)

  user User @relation(fields: [userId], references: [id])
  land Land @relation(fields: [landId], references: [id])

  @@unique([userId, landId])
}

model UserSpot {
  id       Int @id @default(autoincrement())
  userId   Int
  spotId   Int
  unlocked Boolean @default(false)

  user User @relation(fields: [userId], references: [id])
  spot Spot @relation(fields: [spotId], references: [id])

  @@unique([userId, spotId])
}

//////////////////////////////////////////////////
// FAQ
//////////////////////////////////////////////////

model Faq {
  id       Int @id @default(autoincrement())
  question String
  answer   String
}