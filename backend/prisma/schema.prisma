generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id             Int      @id @default(autoincrement())
  username       String
  heartsCount    Int      @default(2)
  email          String   @unique
  password       String
  currentLandId  Int?
  currentSpotId  Int?

  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]

  createdAt DateTime @default(now())
}

model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)

  spots Spot[]
  users User[] @relation("CurrentLand")
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int     // 1-12
  isUnlocked Boolean @default(false)

  land Land @relation(fields: [landId], references: [id])
  currentSpotUsers User[] @relation("CurrentSpot")

  // Relation with UserProgress
  userProgress UserProgress[]
}

model UserProgress {
  id        Int            @id @default(autoincrement())
  userId    Int
  spotId    Int
  habitId   Int
  dayNumber Int
  status    ProgressStatus @default(completed)
  
  user  User  @relation(fields: [userId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId, spotId, dayNumber])
}

model MonthlyProgressDisplay {
  id        Int      @id @default(autoincrement())
  userId    Int
  month     Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

//////////////////////////////////////////////////
// HABITS
//////////////////////////////////////////////////

model HabitCategory {
  id           Int     @id @default(autoincrement())
  categoryName String

  habits Habit[]
}

model Habit {
  id         Int           @id @default(autoincrement())
  categoryId Int
  taskName   String
  check      Boolean       @default(false)

  category HabitCategory @relation(fields: [categoryId], references: [id])
  progress UserProgress[]
}

//////////////////////////////////////////////////
// FAQ
//////////////////////////////////////////////////

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}
