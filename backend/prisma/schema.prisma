generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  
}
enum ProgressStatus {
  completed
  missed
}

model User {
  id             Int      @id @default(autoincrement())
  username       String
  heartsCount    Int      @default(2)
  email          String   @unique
  password       String
  currentLandId  Int?
  currentSpotId  Int?
  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])
  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]
  createdAt      DateTime @default(now())
}

model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)
  spots Spot[]
  users User[] @relation("CurrentLand")
}

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int
  isUnlocked Boolean @default(false)
  land Land @relation(fields: [landId], references: [id])
  currentSpotUsers User[] @relation("CurrentSpot")
  userProgresses UserProgress[]
}

model UserProgress {
  id        Int            @id @default(autoincrement())
  userId    Int
  spotId    Int
  habitId   Int
  dayNumber Int
  status    ProgressStatus @default(missed)
  user  User  @relation(fields: [userId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])
  @@unique([userId, habitId, spotId, dayNumber])
}

model MonthlyProgressDisplay {
  id        Int      @id @default(autoincrement())
  userId    Int
  month     Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model HabitCategory {
  id           Int     @id @default(autoincrement())
  categoryName String  @db.VarChar(50)
  habits Habit[]
}

model Habit {
  id         Int     @id @default(autoincrement())
  taskName   String  @db.VarChar(255)
  check      Boolean @default(false)
  categoryId Int
  category   HabitCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  userProgresses UserProgress[]
}

model Faq {
  id       Int    @id @default(autoincrement())
  question String @db.Text
  answer   String @db.Text
}
