generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
 
}

//////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////

enum ProgressStatus {
  completed
  missed
}

//////////////////////////////////////////////////
// MODELS
//////////////////////////////////////////////////

model User {
  id             Int      @id @default(autoincrement())
  username       String   @db.VarChar(50)
  heartsCount    Int      @default(2)
  email          String   @unique @db.VarChar(100) 
  currentLandId  Int?
  currentSpotId  Int?

  currentLand    Land?    @relation("CurrentLand", fields: [currentLandId], references: [id])
  currentSpot    Spot?    @relation("CurrentSpot", fields: [currentSpotId], references: [id])

  progress       UserProgress[]
  monthlyDisplay MonthlyProgressDisplay[]

  createdAt DateTime @default(now())
}

//////////////////////////////////////////////////

model Land {
  id         Int     @id @default(autoincrement())
  isUnlocked Boolean @default(false)

  spots Spot[]

  users User[] @relation("CurrentLand")
}

//////////////////////////////////////////////////

model Spot {
  id         Int     @id @default(autoincrement())
  landId     Int
  monthName  Int    // 1-12
  isUnlocked Boolean @default(false)

  land Land @relation(fields: [landId], references: [id])

  users    User[]         @relation("CurrentSpot")
  progress UserProgress[]
}

//////////////////////////////////////////////////

model HabitCategory {
  id           Int    @id @default(autoincrement())
  categoryName String @db.VarChar(50)

  habits Habit[]
}

//////////////////////////////////////////////////

model Habit {
  id         Int    @id @default(autoincrement())
  categoryId Int
  taskName   String @db.VarChar(255)

  category HabitCategory @relation(fields: [categoryId], references: [id])
  progress UserProgress[]
}

//////////////////////////////////////////////////

model UserProgress {
  id        Int @id @default(autoincrement())

  userId  Int
  habitId Int
  spotId  Int

  dayNumber Int
  status    ProgressStatus @default(completed)

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])
  spot  Spot  @relation(fields: [spotId], references: [id])

  @@unique([userId, habitId, spotId, dayNumber])
}

//////////////////////////////////////////////////

model FAQ {
  id       Int  @id @default(autoincrement())
  question String @db.Text
  answer   String @db.Text
}

//////////////////////////////////////////////////

model MonthlyProgressDisplay {
  id        Int @id @default(autoincrement())
  userId    Int
  monthIndex Int

  activitiesPercent Int @default(0)
  doctorPercent     Int @default(0)
  waterPercent      Int @default(0)
  medsPercent       Int @default(0)
  eatPercent        Int @default(0)
  moodsPercent      Int @default(0)

  treeGrowthStage Int @default(1)
  overallScore    Decimal @default(0.00)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, monthIndex])
}
